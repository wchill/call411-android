<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content" android:layout_width="match_parent">

    <android.support.v7.widget.CardView
        style="@style/Card"
        android:id="@+id/card">

        <include
            layout="@layout/card_photo"
            android:transitionName="photo" />

        <TextView
            android:id="@+id/show_details"
            style="@style/CardTitle"
            android:text="Phone Name" />

    </android.support.v7.widget.CardView>
</RelativeLayout>
